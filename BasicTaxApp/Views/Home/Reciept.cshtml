@using BasicTaxApp.Models
@using BasicTaxApp.Extentions
@model IEnumerable<Product>

@{
    Layout = null;
    ViewData["Title"] = "Receipt";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reciept</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    
    @{
        decimal Saletax = 0;
        decimal Total = 0;
        
      
    }
    <div class="w-50">
        <table class="table  table-striped m4">
            <p class="text-center mb-6 h1">Receipt</p>
            <tr class="mt-5">
                <th>Quantity </th>
                <th>Name</th>
                <th>Price </th>
            </tr>
            @foreach (var item in Model)
            {
          
                <tr>
                    <td>@item.Quantity</td>
                    <td>@item.Name</td>
                    <td>@item.Total()</td>

                </tr>

                Total += item.Total();
                Saletax += item.CalculateTax();
            }
            
        </table>
        @{
           
        }
        <h6 class="m-2">Sale tax :@Saletax</h6>
        <h6 class="m-2">Total : @Total</h6>

        <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'"> Back</button>
    </div>
</body>
</html>
